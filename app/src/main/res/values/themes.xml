<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProtectorasMadrid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryLightColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Animations -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <!--SplashScreen-->
    <style name="SplashTheme" parent="Theme.ProtectorasMadrid">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--NumberPicker-->
    <style name="MyAppTheme.NumberPicker" parent="Theme.ProtectorasMadrid">
        <item name="android:colorControlNormal"> @color/primaryColor </item>
    </style>

    <!--Imagen redondeada-->
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
    </style>


</resources>